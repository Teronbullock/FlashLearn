extends layout/layout
block content
  section.form-container.container.py-5 
    .form.form--medium.p-3 
      .form__header
        h2.form__title User Profile
        .form__wrapper
          form.form__body(method='POST' action=`/profile/${userID}/?_method=PUT`)
            .form-group.mb-3
              label.form__label(for='username') Username
              input.form__input.p-2(type='text' name='username' value=`${user_name}` disabled)
            .form-group.mb-3
              label.form__label(for='email') Email
              input.form__input.p-2(type='text' name='email' value=`${user_email}` required)
            .form-group.mb-3 
              label.form__label(for='old_password') Old Password
              input.form__input.p-2(type='text' name='old_password' required)
            .form-group.mb-3
              label.form__label(for='password') Password
              input.form__input.p-2(type='password' name='password' required pattern=".{8,}" title="8 characters minimum")
            .form-group.mb-3
              label.form__label(for='confirm_password') Confirm Password
              input.form__input.p-2(type='password' name='confirm_password' required pattern=".{8,}" title="8 characters minimum")
            button.btn.btn--large.btn--tertiary(type='submit') Submit